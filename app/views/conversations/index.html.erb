<h1>Listing conversations</h1>

<table>
  <tr>
    <th>Chat</th>
    <th>Prospect</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @conversations.each do |conversation| %>
  <tr>
    <td><%= conversation.chat %></td>
    <td><%= conversation.prospect %></td>
    <td><%= link_to 'Show', [conversation.prospect, conversation] %></td>
    <td><%= link_to 'Edit', edit_prospect_conversation_path(conversation.prospect, conversation) %></td>
    <td><%= link_to 'Destroy', [conversation.prospect, conversation], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Conversation', new_prospect_conversation_path(params[:prospect_id]) %>
